/* pages/setting/setting.wxss */
.container{
  background-color: #f1f1f7;
  padding-top: 0.1px;
}

.set-title{
  line-height: 30px;
  font-size: 15px; font-weight: bold;
  padding: 0 10px;
}
.set-box{
  display: block;
  margin: 10px;
  border-radius: 4px;
  background: #fff;
}

.set-item{
  display: flex;
  line-height: 48px;
  font-size: 14px;
  padding: 0 10px;
  padding-left: 0;
  margin-left: 10px;
  background-color: transparent;
  border-bottom: 1px solid #f1f1f7;
  border-radius: 0;
  text-align: justify;
}
.set-item::after{
  border: 0;
}
.set-item:last-child { border: 0;}

.set-item .name {
  width: 30%;
}
.set-item .value {
  flex: 1;
  text-align: right;
  color: #8c8c8c;
}

.set-item .iconfont {
  font-size: 14px;
}

/* 主题列表 */
.theme-list {
  white-space: nowrap;
  overflow-x: auto;
  overflow-y: hidden;
  margin: 0 5px;
}
.theme-item{
  display: inline-block;
  width: 33.3%;
  overflow: hidden;
  font-size: 14px;
  text-align: center;
}

.theme-content {
  position: relative;
  margin: 5px;
  border: 1px solid #ececec;
  background-color: #fff;
  border-radius: 4px;
  overflow: hidden;
}
.theme-cover::after {
  content: "";
  padding-top: 160%;
  display: block;
}
.theme-cover {
  position: relative;
  top: 0;
  left: 0;

  display: flex;
  align-items: center;
  justify-content: center;
}
.theme-cover image{
  position: absolute;
  width: 100%;
  height: 100%;
}
.theme-content rich-text {
  position: absolute;
  left: 0;
  right: 0;
  padding: 0 10px;
  line-height: 30px;
  bottom: 0;
  background-color: #fff;
  color: gray;
  font-size: 12px;
}

.theme-content .using-flag{
  display: inline-block;
  position: absolute;
  bottom: 35px;
  right: 5px;
  font-size: 10px;
  line-height: 14px;
  padding: 0 4px;
  border-radius: 6px;
  background-color: #fff;
  color: #1a1a1a;
}