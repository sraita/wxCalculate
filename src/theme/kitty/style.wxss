.theme-kitty.container{
  background-color: #fff1f7;
  color: #fe8cb2;
}


.theme-kitty .tool-list{
  white-space: nowrap;
  background-color: #fff !important;
  box-shadow: 1px 1px 10px -2px #f72a6e;
}
.theme-kitty .tool-item{
  height: 60px;
}
.theme-kitty .tool-item .btn{ 
  line-height: 60px;
}
.theme-kitty .tool-item .iconfont { color: #fe8cb2; }
.theme-kitty .tool-item .btn.btn-hover{
  color: #fff;
  line-height: 56px;
  background: linear-gradient( #ff5d9c,#fe4d7b);
  border: 2px solid #ff3b7b;
  box-sizing: border-box;
}
.theme-kitty .tool-item .btn.btn-hover .iconfont { color: #ffeff6; }

.theme-kitty  .btn-item .btn{
  height: auto;
  width: auto;
  left: 5px; right: 5px;
  top: 5px; bottom: 5px;
  border: 1px solid #ff3b7b;
  color: #ff3b7b;
  border-radius: 20px;
  background: #fff;
}
.theme-kitty .btn-item .btn.btn-hover {
  color: #fff;
  background: linear-gradient( #ff5d9c,#fe4d7b);
  border: 2px solid #ff3b7b;
}

.theme-kitty  .btn-item .btn rich-text {
  width: 100%;
  height: 100%;
}

.theme-kitty .mem-item .btn {
  border: 1px solid #ff3b7b;
  color: #ff3b7b;
  border-radius: 8px;
  background: #fff !important;
}

.theme-kitty .mem-item .btn.btn-hover {
  color: #fff;
  background: linear-gradient( #ff5d9c,#fe4d7b) !important;
  border: 2px solid #ff3b7b;
}

.theme-kitty .calc-in-out-box , .theme-kitty .calc-in-out-box .calc-input-box, .theme-kitty .calc-tip-box{
  color: #fe8cb2;
  text-shadow: 1px 1px #fff;
}