.theme-white.container {
  background-color: #edede8;
  color: #8c8c8c;
  text-shadow: 1px 1px #fff;
}
.theme-white.skin-night.container{
  background-color: #313131;
  color: #F5F5F5;
  text-shadow: none;
}

/* 状态提示栏 */
.theme-white .calc-tip-box{
  color: #8c8c8c;
  text-shadow: 1px 1px #fff;
}
/* 输入输出显示区域 */
.theme-white .calc-input-box{
  color: #8c8c8c;
  text-shadow: 1px 1px #fff;
}

/* 记忆功能区 */
.theme-white .mem-item .btn {
  color: #969696;
  border-radius: 3px;
  text-shadow: 1px 1px #fff;
  background-color: #ebe8e4;
  background-color: linear-gradient(to bottom, #e0dcdb, #f4f1ec);
  box-shadow: 0 1px 3px -1px rgba(0,0,0,.3),
              0 1px 3px rgba(0,0,0,.3);
}
.theme-white .mem-item .btn.btn-hover {
  background-color: #e7e3e1;
  box-shadow: inset 0 1px 5px -1px rgba(0,0,0,.3);
}

/* 工具栏 */
.theme-white .tool-list{
  padding: 5px;
  background-color: #e8e4e2;
  white-space: nowrap;
}

.theme-white .tool-item{
  border-left: 1px solid #d6d1d0;
  height: 50px;
}
.theme-white .tool-item:first-child .btn{ border-radius: 4px 0 0 4px;}
.theme-white .tool-item:last-child .btn{
  border-radius: 0 4px 4px 0;
}
.theme-white .tool-item:first-child , .theme-white .tool-item:first-child .btn{
  border-left: 0;
}
.theme-white .tool-item .btn {
  background-color: #eeeae7;
  color: #969696;
  border-left: 1px solid #f9f6f3;
  text-shadow: 1px 1px #fff;
  line-height: 50px;
}
.theme-white .tool-list .btn.btn-hover{
  background-color: #e7e3e1;
  box-shadow: inset 1px 1px 4px 0px rgba(0,0,0,.3);
  border-left: 0;
}

/* 数字按钮 - 主体按钮区域 */
.theme-white .number-list {
  padding: 5px 3px;
}
.theme-white .btn-item .btn{
  top: 2px; left: 2px; right: 2px; bottom: 2px;
  padding: 3px;
  color: #969696;
  border-radius: 6px;
  text-shadow: 1px 1px #fff;
  background-color: #ebe8e4;
  background-color: linear-gradient(to bottom, #e0dcdb, #f4f1ec);
}
.theme-white .btn-item .btn.btn-primary{
  color: #e3a67a;
}
.theme-white .btn-item .btn.btn-second{
  color: #707070;
}
.theme-white .btn-item .btn rich-text {
  width: 100%;
  height: 100%;
  border-radius: 4px;
  background-color: #ebe8e4;
  background-color: linear-gradient(to bottom, #e7e3e1, #f4f1ec); 
  box-shadow: 0 1px 3px -1px rgba(0,0,0,.3);
}

.theme-white .btn-item .btn.btn-hover{
  background-color: #e3dfde;
  background-color: linear-gradient(to bottom, #e0dcdb, #f4f1ec);
}

.theme-white .btn-item .btn.btn-hover rich-text {
  background-color: #e7e3e1;
  box-shadow: inset 0 1px 5px -1px rgba(0,0,0,.3);
}



/* theme white -- night mode */
.skin-night.theme-white .calc-in-out-box , .skin-night.theme-white .calc-in-out-box .calc-input-box, .skin-night.theme-white .calc-tip-box{
  color: #8c8c8c;
  text-shadow: none;
}

.skin-night.theme-white .mem-item .btn {
  color: #969696;
  text-shadow: none;
  background: #333;
  background-color: none;
}

.skin-night.theme-white .tool-list{
  background-color: #3b3b3b;
}
.skin-night.theme-white .tool-item{
  border-left: 1px solid #222;
}
.skin-night.theme-white .tool-item .btn {
  background-color: #333;
  color: #969696;
  border-left: 1px solid #555;
  text-shadow: none;
}
.skin-night.theme-white .tool-item:first-child , .skin-night.theme-white .tool-item:first-child .btn{
  border-left: 0;
}

.skin-night.theme-white .btn-list {
  padding: 5px 3px;
}

.skin-night.theme-white .btn-item .btn{
  top: 2px; left: 2px; right: 2px; bottom: 2px;
  text-shadow: none;
  background: #333;
  background-color: linear-gradient(to bottom, #303030, #3b3b3b),
  -webkit-linear-gradient(to bottom, #303030, #3b3b3b);
  
}
.skin-night.theme-white .btn-item .btn.btn-primary{
  color: #e3a67a;
}
.skin-night.theme-white .btn-item .btn.btn-second{
  color: #8c8c8c;
}
.skin-night.theme-white .btn-item .btn rich-text {
  width: 100%;
  height: 100%;
  border-radius: 4px;
  background: #333;
  background-color: linear-gradient(to bottom, #3b3b3b, #303030),
                    -webkit-linear-gradient(to bottom, #3b3b3b, #303030);
}

.skin-night.theme-white .btn-item .btn.btn-hover{
  background-color: #333;
  background-color: linear-gradient(to bottom, #3b3b3b, #303030),
                    -webkit-linear-gradient(to bottom, #3b3b3b, #303030);
}

.skin-night.theme-white .btn-item .btn.btn-hover rich-text {
  background-color: #8c8c8c;
  box-shadow: inset 1px 1px 4px 0px rgba(0,0,0,.3);
}
/* 历史记录页面 */
.theme-white.skin-night .his-item { 
  border-bottom: 1px solid #444;
}
.theme-white.skin-night .his-item .input{ 
  color: #8c8c8c;
}
/* 设置页面 */
.theme-white.skin-night .set-box{
  background-color: #2a2a2a;
}
.theme-white.skin-night .set-item {
  color: #f5f5ff;
  border-color: #555;
}
.theme-white.skin-night .theme-content { border-color: #333; }
.theme-white.skin-night .theme-content rich-text {
  background-color: #2a2a2a;
  color: #f5f5ff;
}